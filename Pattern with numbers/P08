/*
    1
   1 1
  1 2 1
 1 3 3 1
1 4 6 4 1
*/
#include <stdio.h>
int main()
{
    int i,j,k,n;
    printf ("Enter limit: ");
    scanf ("%d",&n);
    for (i=0; i<n; i++)
    {
        for (j=0; j<n-i-1; j++)
        {
            printf(" ");
        }
        int m=1;
        for (k=0; k<n; k++)
        {
            if (i>=k)
                printf("%d ",m);
            else
                printf("  ");
            m=m*(i-k)/(k+1);
        }
        printf("\n");
    }
    return 0;
}
