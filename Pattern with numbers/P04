/*
                5
			4	4
		3	3	3
	2	2	2	2
1	1	1	1	1
*/
#include <stdio.h>
int main()
{
    int i,j,n,m;
    printf ("Enter the limit: ");
    scanf ("%d",&n);
    printf ("Output:\n");
    for (i=0; i<n; i++)
    {
        m=n-i;
        for (j=0; j<n; j++)
        {
            if (i+j>=n-1)
                printf ("%d ",m);
            else
                printf ("  ");
        }
        printf ("\n");
    }
    return 0;
}
