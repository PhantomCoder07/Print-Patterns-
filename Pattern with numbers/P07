/*
      10
    6 9
  3 5 8
1 2 4 7
*/
#include <stdio.h>
int main()
{
    int n,i,j,m=1;
    printf ("Enter limit: ");
    scanf("%d",&n);
    int a[n][n],b[n][n];
    printf ("Output:\n");
    for(i=0; i<n; i++)
    {
        for(j=0; j<n; j++)
        {
            if(i>=j)
                a[i][j]=m++;
            else
                a[i][j]=0;
        }
    }
    for(i=0; i<n; i++)
    {
        for(j=0; j<n; j++)
        {
            b[i][j]=a[j][n-1-i];
        }
    }
    for(i=0; i<n; i++)
    {
        for(j=0; j<n; j++)
        {
            if(b[i][j]!=0)
                printf("%d ",b[i][j]);
            else
                printf("  ");
        }
        printf("\n");
    }
    return 0;
}
