/*
1 1 1 1
1 2 3 4
1 3 6 10
1 4 10 20
*/
#include <stdio.h>
int main()
{
    int i,j,n;
    printf ("Enter limit: ");
    scanf ("%d",&n);
    int arr[n][n];
    printf("Output:\n");
    for (i=0; i<n; i++)
    {
        for (j=0; j<n; j++)
        {
            if (i==0 || j==0)
                arr[i][j]=1;
        }
    }
    for (i=1; i<n; i++)
    {
        for (j=1; j<n; j++)
        {
            arr[i][j]=arr[i-1][j]+arr[i][j-1];
        }
    }
    for (i=0; i<n; i++)
    {
        for (j=0; j<n; j++)
        {
            printf("%d ",arr[i][j]);
        }
        printf("\n");
    }
    return 0;
}
