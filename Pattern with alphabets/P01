/*
a				
a	b			
a	b	C		
a	b	C	d	
a	b	C	d	e
*/
#include <stdio.h>
int main()
{
    int i,j,n;
    char m='a';
    printf ("Enter the limit: ");
    scanf ("%d",&n);
    printf ("Output:\n");
    for (i=0; i<n; i++)
    {
        for (j=0; j<n; j++)
        {
            if (i>=j)
                printf ("%c ",m+j);
            else
                printf ("  ");
        }
        printf ("\n");
    }
    return 0;
}
