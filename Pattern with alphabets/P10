/*
    a
   a a
  a b a
 a b b a
a b c b a
*/
#include <stdio.h>
int main()
{
    int i,j,n;
    printf ("Enter the limit: ");
    scanf ("%d",&n);
    printf ("Output:\n");
    for (i=0; i<n; i++)
    {
        for (j=0; j<n; j++)
        {
            if (i+j<n-1)
                printf(" ");
        }
        for (j=0; j<=i; j++)
        {
            int c=(j<(i-j))? j:(i-j);
            printf("%c ",'a'+c);
        }
        printf("\n");
    }
    return 0;
}
