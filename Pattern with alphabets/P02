/*
a				
b	c			
d	e	F		
g	h	I	j	
k	l	M	n	o
*/
#include <stdio.h>
int main()
{
    int i,j,n;
    char ch='a';
    printf ("Enter the limit: ");
    scanf ("%d",&n);
    printf ("Output:\n");
    for (i=0; i<n; i++)
    {
        for (j=0; j<n; j++)
        {
            if (i>=j)
                printf ("%c ",ch++);
            else
                printf ("  ");
        }
        printf ("\n");
    }
    return 0;
}
