/*
				z
			x	y
		U	v	w
	q	R	s	t
l	m	N	o	p
*/
#include <stdio.h>
int main()
{
    int i,j,n;
    printf ("Enter limit: ");
    scanf ("%d",&n);
    char a[n][n],ch='z';
    printf ("Output:\n");
    for(i=0; i<n; i++)
    {
        for(j=n-1; j>=0; j--)
        {
            if(i+j>=n-1)
                a[i][j]=ch--;
            else
                a[i][j]=0;
        }
    }
    for(i=0; i<n; i++)
    {
        for(j=0; j<n; j++)
        {
            if (a[i][j]!=0)
                printf("%c ",a[i][j]);
            else
                printf ("  ");
        }
        printf("\n");
    }
    return 0;
}
