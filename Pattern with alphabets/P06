/*
    a b c d e
   a b c d e
  a b c d e
 a b c d e
a b c d e
*/
#include <stdio.h>
int main()
{
    int i,j,n;
    char m='a';
    printf ("Enter the limit: ");
    scanf ("%d",&n);
    printf ("Output:\n");
    for (i=0; i<n; i++)
    {
        for (j=0; j<n; j++)
        {
            if (i+j<n-1)
                printf(" ");
        }
        for (j=0; j<n; j++)
        {
            printf ("%c ",m+j);
        }
        printf ("\n");
    }
    return 0;
}
