/*
        *
      * *
    *   *
  *     * 
*       *
  *     * 
    *   * 
      * *
        *
*/
#include <stdio.h>
int main()
{
    int i,j,n;
    printf ("Enter limit: ");
    scanf ("%d",&n);
    printf ("Output:\n");
    for (i=0; i<2*n-1; i++)
    {
        for (j=n-1; j>=0; j--)
        {
            if (i==j || j==0 || i+j==2*n-2)
                printf ("* ");
            else
                printf ("  ");
        }
        printf ("\n");
    }
    return 0;
}
