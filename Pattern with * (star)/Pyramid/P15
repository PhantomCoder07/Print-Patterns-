/*
        *
      *   *
    *       * 
  *           *
* * * * * * * * * 
*/
#include <stdio.h>
int main()
{
    int i,j,n;
    printf ("Enter limit: ");
    scanf ("%d",&n);
    printf ("Output:\n");
    for (i=n-1; i>=0; i--)
    {
        for (j=0; j<2*n-1; j++)
        {
            if (i==0 || i==j || i+j==2*n-2)
                printf ("* ");
            else
                printf ("  ");
        }
        printf ("\n");
    }
    return 0;
}
