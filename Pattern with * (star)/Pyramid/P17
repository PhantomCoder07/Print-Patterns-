/*
* * * * * * * * *
  *           * 
    *       *
      *   * 
        *
*/
#include <stdio.h>
int main()
{
    int i,j,n;
    printf ("Enter the limit: ");
    scanf ("%d",&n);
    printf ("Output:\n");
    for (i=0; i<n; i++)
    {
        for (j=0; j<2*n-1; j++)
        {
            if (i==j || i+j==2*n-2 || i==0)
                printf ("* ");
            else
                printf ("  ");
        }
        printf ("\n");
    }
    return 0;
}
