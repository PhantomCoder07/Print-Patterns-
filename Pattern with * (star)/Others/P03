/*
*	*	*	*	*	*	*	*	*
	*	*	*	*	*	*	*	
		*	*	*	*	*		
			*	*	*			
				*				
			*	*	*			
		*	*	*	*	*		
	*	*	*	*	*	*	*	
*	*	*	*	*	*	*	*	*
*/
#include <stdio.h>
int main()
{
    int i,j,n;
    printf ("Enter limit: ");
    scanf ("%d",&n);
    for (i=0; i<n; i++)
    {
        for (j=0; j<n; j++)
        {
            if (i<=j)
                printf ("* ");
            else
                printf ("  ");
        }
        for (j=0; j<n; j++)
        {
            if (i+j<n-1)
                printf ("* ");
            else
                printf ("  ");
        }
        printf ("\n");
    }
    for (i=0; i<n-1; i++)
    {
        for (j=0; j<n; j++)
        {
            if (i+j>=n-2)
                printf ("* ");
            else
                printf ("  ");
        }
        for (j=0; j<n; j++)
        {
            if (i>=j)
                printf ("* ");
            else
                printf ("  ");
        }
        printf ("\n");
    }
    return 0;
}
