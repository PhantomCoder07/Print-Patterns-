  **
 *
*/
#include <stdio.h>
int main()
{
    int i,j,k,n;
    printf ("Enter limit: ");
    scanf ("%d",&n);
    for (i=0; i<n-1; i++)
    {
        for (j=0; j<n-i-1; j++)
        {
            printf("  ");
        }
        for (k=0; k<n; k++)
        {
            if (i>=k)
                printf("*");
            else
                printf(" ");
        }
        printf("\n");
    }
    for (i=0; i<n*2; i++)
    {
        printf("*");
    }
    printf("\n");
    for (i=1; i<n; i++)
    {
        for (j=n-i-1; j>=0; j--)
        {
            printf(" ");
        }
        for (k=0; k<n; k++)
        {
            if (i<=k)
                printf("*");
        }
        printf("\n");
    }
    return 0;
}
