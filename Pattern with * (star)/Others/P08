/*
*	*	*	*	*	*	*	*	*
*			*		*			*
*		*				*		*
*	*						*	*
*								*
*	*						*	*
*		*				*		*
*			*		*			*
*	*	*	*	*	*	*	*	*
*/
#include <stdio.h>
int main()
{
    int i,j,n;
    printf ("Enter limit: ");
    scanf ("%d",&n);
    for (i=0; i<n; i++)
    {
        for (j=0; j<n; j++)
        {
            if (i+j==n-1 || i==0 || j==0)
                printf ("* ");
            else
                printf ("  ");
        }
        for (j=1; j<n; j++)
        {
            if (i==j || i==0 || j==n-1)
                printf ("* ");
            else
                printf ("  ");
        }
        printf ("\n");
    }
    for (i=1; i<n; i++)
    {
        for (j=0; j<n; j++)
        {
            if (i==j || i==n-1 || j==0)
                printf ("* ");
            else
                printf ("  ");
        }
        for (j=1; j<n; j++)
        {
            if (i+j==n-1 || i==n-1 || j==n-1)
                printf ("* ");
            else
                printf ("  ");
        }
        printf ("\n");
    }
    return 0;
}
