/*
  * *       * *
* * * *   * * * *
* * * * * * * * *
  * * * * * * *
    * * * * *
      * * *
        *
*/
#include <stdio.h>
int main()
{
    int i,j,n;
    printf ("Enter limit: ");
    scanf("%d",&n);
    for (i=n/2; i<=n; i+=2)
    {
        for (j=1; j<n-i; j+=2)
            printf("  ");
        for (j=1; j<=i; j++)
            printf("* ");
        for (j=1; j<=n-i; j++)
            printf("  ");
        for (j=1; j<=i; j++)
            printf("* ");
        printf("\n");
    }
    for (i=0; i<n; i++)
    {
        for (j=0; j<2*n-1; j++)
        {
            if (i<=j && i+j<2*n-1)
                printf ("* ");
            else
                printf ("  ");
        }
        printf ("\n");
    }
    return 0;
}
